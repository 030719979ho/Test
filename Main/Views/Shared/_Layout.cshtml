<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Test</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        #grad3 {
            height: 100px;
            background-color: #0d0d0d; /* For browsers that do not support gradients */
            background-image: linear-gradient(90deg, #0d0d0d, #666666); /* Standard syntax (must be last) */
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Index</a></li>
                    

                </ul>
            </div>
        </div>
    </div>
    <header class="w3-display-container">
        <img src="https://www.nibmworldwide.com/resources/13/banner.jpg" style="width:100%" height="300">
        <div class="w3-display-middle">
            <h1 class="w3-xxxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min"><b>LIBRARY</b></span></h1>
        </div>
    </header>
    <div id="grad3" class="w3-display-container">
        <button class="btn btn-lg w3-display-middle">No Action</button>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Test</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>